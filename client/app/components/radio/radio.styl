$maxwidth=250px
.radio-adulto-contemporaneo .top-10
  border 1px solid #494848
  border-bottom 1px solid #333 !important
.radio-adulto-contemporaneo .top-10 .list-group .list-group-item
  border-top 1px solid #232323 !important
  color #939292 !important
.radio-adulto-contemporaneo .top-10 .list-group .list-group-item span
  color #939292
.radio-zone
  max-width $maxwidth
  width $maxwidth
  padding 0px !important
  float left
  flex 1
  -webkit-flex 1
  -ms-flex 1
  transition background 1s
  margin-top 0px !important
.panel-heading
  background none !important
  border none
  position relative
  padding 15px !important
.panel-heading .list-group
  position absolute
  left 100%
  top 0%
  width 200px
  opacity 0
  visibility hidden
  z-index 9999
  transition left 0.7s, opacity 1s
  -webkit-transition left 0.7s, opacity 1s
.list-group.active
  left 100%
  opacity 1
  visibility visible
  transition left 0.7s, opacity 1s
.list-group a
  color #D0D0D0
  border none
  cursor pointer
.cover
  position relative
  overflow hidden
  height 270px

.cover
  position relative
  overflow hidden
  height 270px


.panel-body
  padding 0px !important

.cover img
  width 100% !important
  max-width 330px
  max-height 330px
  padding 10px

.cover .nexty
  width 100%
  margin 0 auto
  position absolute
  top 231px


.cover strong
  display block
  width 100%
  background rgba(0, 0, 0, 0.6)
  color #8bb81f
  font-size 12px
  text-align left
  padding 0px 15px
  padding-left 37px
  line-height 17px
  overflow hidden
  height 34px

.cover span
  display block
  width 100%
  color #D0D0D0
.background-image
  position absolute
  width $maxwidth
  height 500px
  background-position center !important
  display block
  -webkit-filter blur(20px)
  -moz-filter blur(20px)
  -o-filter blur(20px)
  -ms-filter blur(20px)
  filter blur(20px)
  transition background 0.5s
  -webkit-transition background 0.5s
  overflow hidden
.audio-player
  height 500px
.player .current-song
  position relative
  color white
  padding 0px 7%
  text-overflow ellipsis
  white-space nowrap

.player .current-song strong
  width 100%
  display block
  font-size 20px
  font-weight 100
  text-overflow: ellipsis;

.player .current-song span
  width 100%
  height 50px
  display block
  font-size 14px
  font-weight 100
  text-overflow: ellipsis;

.player .current-song strong
  max-width 200px
  white-space nowrap
  overflow hidden
.eq-bars-container
  position  relative
  top  -6px
  right  0
  bottom  40px
  left  0
  margin  10px auto
  text-align  center
  max-height 80px
  height 80px
.eq-bars-container::before
  content ""
  display inline-block
  height 100%
.eq-bar
  display inline-block
  vertical-align bottom
  width 16px
  height 20%
  -webkit-transition height 0.4s ease-out
  transition height 0.4s ease-out
.eq-bar-1
  background #463e33
.eq-bar-2
  background #55503a
.eq-bar-3
  background #5d613c
.eq-bar-4
  background #61763b
.eq-bar-5
  background #65803b
.eq-bar-6
  background #463e33
.eq-bar-7
  background #55503a
.eq-bar-8
  background #5d613c
.eq-bar-9
  background #61763b
.eq-bar-10
  background #65803b
.player .player-control
  position relative
  text-align center
  cursor pointer
.player .player-control i
  font-size 35px
  color white
  border-top 2px groove #CCC
  border-bottom 2px groove #CCC
  padding 10px
  opacity 0.3
.i-radio-category
  position relative
  top 5px
  font-size 24px
  opacity 0.3
  transition all 0.5s ease
  -webkit-transition all 0.5s ease
  transform rotate(-100grad)
  -webkit-transform rotate(-100grad)
  -moz-transform rotate(-100grad)
.i-radio-category.active
  transform rotate(100grad)
  -webkit-transform rotate(100grad)
  -moz-transform rotate(100grad)
.top-10 .list-group .list-group-item
  border-bottom none !important
  background transparent !important
  border-left none !important
  border-right none !important
  color #939292 !important
  z-index 9
  cursor pointer !important
  font-weight lighter
.top10-item-cover
  padding-left 0px !important

.top10-img-thumbnail
  width 4.2em
  height 4.2em
.list-group-item .play-top-10 i
  font-size 12px
  color rgba(0, 0, 0, 0.4)
  background #6C6C6C
  padding 9px
  border-radius 25px
  opacity 0.5
  margin-top 10px
.play-top-10
  padding-left 0 !important
.song-information
  margin-top 10px !important
  padding-left 10px !important
  padding-right 0px !important
.list-group-item strong
  color #D0D0D0
.artist-top-10, .song-top-10
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
.list-group-item:last-child
  border-bottom 1px solid #232323 !important
.top-10 h3
  color #D0D0D0
  text-align center
  margin-top 0px
  padding-top 10px
  font-weight 100
.radio-list .panel-heading h4
  color: #D0D0D0;
  font-weight: 100;
